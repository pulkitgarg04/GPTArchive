{
    "manifest_version": 3,
    "name": "GPTArchive",
    "version": "1.0",
    "description": "Save and bookmark your ChatGPT chats for easy access.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "save_chat": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Alt+Shift+S"
            },
            "description": "Save current chat"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}